    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "lint-staged": "^11.1.2",
    "nodemon": "^2.0.12",
    "pm2": "^5.1.0",
    "pre-commit": "^1.2.2",
    "prettier": "^2.3.2",
    "ts-node": "^10.1.0",
    "tsc": "^2.0.3",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
