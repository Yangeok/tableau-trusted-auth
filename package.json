  "scripts": {
    "build": "tsc",
    "start": "pm2 start ecosystem.yml",
    "start:dev": "nodemon src/index.ts",
    "restart": "pm2 restart ecosystem.yml",
    "stop": "pm2 stop ecosystem.yml",
    "lint": "eslint --ignore-pattern './dist/*' --ignore-pattern '*.d.ts' --ext .ts .",
